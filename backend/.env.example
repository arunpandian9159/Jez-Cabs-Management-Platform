# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=jezcabs
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Database - MongoDB
MONGODB_URI=mongodb://admin:admin@localhost:27017/jezcabs?authSource=admin

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=30d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:rabbitmq@localhost:5672
RABBITMQ_QUEUE_PREFIX=jezcabs

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@jezcabs.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIRECTORY=./uploads

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Jez Cabs Management Platform API
SWAGGER_DESCRIPTION=Comprehensive API for multi-tenant cab rental management
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

